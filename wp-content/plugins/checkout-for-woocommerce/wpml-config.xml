<wpml-config>
    <custom-types>
        <custom-type translate="1" display-as-translated="1">cfw_order_bumps</custom-type>
        <custom-type translate="1" display-as-translated="1">cfw_pickup_location</custom-type>
    </custom-types>
    <custom-fields>
        <custom-field action="translate" style="line" label="Order Bump Offer Language" group="CheckoutWC Order Bump">cfw_ob_offer_language</custom-field>
        <custom-field action="translate" style="textarea" label="Order Bump Offer Description" group="CheckoutWC Order Bump">cfw_ob_offer_description</custom-field>
        <custom-field action="translate" style="textarea" label="Pickup Instructions" group="CheckoutWC Pickup Location">cfw_pl_instructions</custom-field>
        <custom-field action="translate" style="line" label="Estimated Pickup Time" group="CheckoutWC Pickup Location">cfw_pl_estimated_time</custom-field>
        <custom-field action="copy">cfw_ob_display_for</custom-field>
        <custom-field action="copy">cfw_ob_products</custom-field>
        <custom-field action="copy">cfw_ob_exclude_products</custom-field>
        <custom-field action="copy">cfw_ob_categories</custom-field>
        <custom-field action="copy">cfw_ob_any_product</custom-field>
        <custom-field action="copy">cfw_ob_display_location</custom-field>
        <custom-field action="copy">cfw_ob_discount_type</custom-field>
        <custom-field action="copy">cfw_ob_offer_product</custom-field>
        <custom-field action="copy">cfw_ob_offer_discount</custom-field>
        <custom-field action="copy">cfw_ob_upsell</custom-field>
        <custom-field action="copy">cfw_ob_offer_quantity</custom-field>
        <custom-field action="copy">cfw_ob_enable_quantity_updates</custom-field>
        <custom-field action="copy">cfw_ob_item_removal_behavior</custom-field>
        <custom-field action="copy">cfw_pl_address</custom-field>
    </custom-fields>
    <admin-texts>
        <key name="_cfw__settings">
            <key name="cart_summary_mobile_label"/>
            <key name="pickup_option_label"/>
            <key name="pickup_ship_option_label"/>
            <key name="trust_badges_title"/>
            <key name="trust_badges">
                <key name="*">
                    <key name="title" />
                    <key name="description" />
                </key>
            </key>
        </key>
    </admin-texts>
</wpml-config>